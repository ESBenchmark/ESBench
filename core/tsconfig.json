{
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"rootDir": "./src",
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"outDir": "lib",
		"strict": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false
	}
}
