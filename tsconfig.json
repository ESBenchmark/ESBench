{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],

		// Prevent WebStorm from compiling unexpected files.

		"strict": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
	}
}
