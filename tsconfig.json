{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext"],

        // Prevent WebStorm from compiling unexpected files.
        "noEmit": true,

        "strict": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    }
}
